{
  "name": "api-linting-service",
  "version": "1.0.0",
  "description": "API Linting as a http service",
  "author": "",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "nest build",
    "prebuild": "rimraf dist && node download-rules.js",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "prestart:debug": "husky install && node download-rules.js && mkdir -p dist && cp src/spectral-rulesets/spectral*.yml dist/",
    "postbuild": "cp src/spectral-rulesets/spectral*.yml dist/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch ",
    "start:prod": "node dist/main",
    "checkTs": "tsc --noEmit",
    "prelint": "npm run checkTs",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config ./jest.json && npm run test:e2e",
    "pretest": "node download-rules.js",
    "test:watch": "jest --config ./jest.json --watch",
    "test:cov": "jest --config ./jest.json --coverage --json --outputFile=test/result.json --testLocationInResults",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --json --outputFile=test/result-e2e.json --testLocationInResults",
    "copy-assets": "cp -rv src/spectral.yml dist/spectral.yml",
    "spectral": "spectral"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.4",
    "@nestjs/config": "^1.1.5",
    "@nestjs/core": "^8.2.4",
    "@nestjs/platform-express": "^8.2.4",
    "@nestjs/swagger": "^5.1.5",
    "@stoplight/spectral-core": "^1.10.0",
    "@stoplight/spectral-ruleset-migrator": "^1.7.2",
    "@stoplight/spectral-rulesets": "^1.4.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "dotenv": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@stoplight/spectral-cli": "^6.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "chokidar": "^3.5.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "file-loader": "^6.2.0",
    "husky": "^7.0.4",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "run-script-webpack-plugin": "0.0.11",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "webpack": "^5.64.4",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

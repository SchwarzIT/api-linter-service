{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": "\\.spec.ts",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "resolver": "./test/custom-resolver.ts",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>../src/$1"
    }
  }